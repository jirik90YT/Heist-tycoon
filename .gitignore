local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "Heist TycoonðŸ’°", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})

--Values
_G.fastPay = true
_G.autorebirth = true

--Functions
function fastPay()
    while _G.fastPay == true do
        game:GetService("ReplicatedStorage").Knit.Services.TycoonService.RF.PayIncome:InvokeServer(game:GetService("Players").LocalPlayer)
        wait(.00001)
     end
    end

    function autorebirth()
        while _G.autorebirth == true do
            game:GetService("ReplicatedStorage").Knit.Services.TycoonService.RF.Rebirth:InvokeServer()
            wait(1.5)
         end
        end

--Tabs
    local Main = Window:MakeTab({
        Name = "Main",
        Icon = "rbxassetid://4483345998",
        PremiumOnly = false
    })


Main:AddToggle({
	Name = "Fast PAY!",
	Default = false,
	Callback = function(Value)
		_G.fastPay = Value
        fastPay()
	end    
})

Main:AddToggle({
	Name = "AutoRebirth!",
	Default = false,
	Callback = function(Value)
		_G.autorebirth = Value
        autorebirth()
	end    
})
